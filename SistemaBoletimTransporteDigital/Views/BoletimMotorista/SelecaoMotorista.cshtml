@using SistemaBoletimTransporteDigital.Enums;
@model SistemaBoletimTransporteDigital.ViewModels.BoletimViewModel

<style>
    .form-control {
        border: 1px solid #5C4033;
    }
</style>

<div class="text-center">
    <br />
    <h1 class="display-4">Relatório por Motorista</h1>
    <br />
</div>

<form method="post" asp-controller="BoletimMotorista" asp-action="Index" onsubmit="return validateForm()">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-12">
                <label for="usuario" class="mr-2">Motorista:</label>
                <select class="form-control" id="usuario" name="usuario">
                    <option value="">Selecione o usuário</option>
                    @if (Model.DadosUsuario != null && Model.DadosUsuario.Count > 0)
                    {
                        foreach (var usuario in Model.DadosUsuario)
                        {
                            if (usuario.Perfil == PerfilEnum.motorista)
                            {
                                <option value="@usuario.Id">@usuario.Nome</option>
                            }
                        }
                    }
                </select>
                <!-- Adicione um campo oculto para armazenar o ID do Usuário selecionado -->
                <input type="hidden" id="usuarioId" name="usuarioId" />
                <div id="usuarioError" class="text-danger" style="display: none;">Por favor, selecione um motorista.</div>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-12">
                <label for="dataInicio" class="mr-2">Data de Início:</label>
                <input type="date" class="form-control" id="dataInicio" name="dataInicio" value="@Model.Filtros.DataInicial?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <label for="dataFinal" class="mr-2">Data Final:</label>
                <input type="date" class="form-control" id="dataFinal" name="dataFinal" value="@Model.Filtros.DataFinal?.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </div>
    
    <button type="submit" class="btn btn-success mt-3">Selecione</button>
</form>

<script>
    function validateForm() {
        var veiculoId = document.getElementById('usuarioId').value;
        if (!veiculoId) {
            document.getElementById('usuarioError').style.display = 'block';
            return false;
        }
        return true;
    }

    document.getElementById('usuario').addEventListener('change', function () {
        var selectedId = this.value;
        document.getElementById('usuarioId').value = selectedId;
        document.getElementById('usuarioError').style.display = 'none';
    });
</script>