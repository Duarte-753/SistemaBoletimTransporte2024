<script type="text/javascript"> @*Pizza Cadastro de carros e motorista*@
    google.charts.load("current", { packages: ["corechart"] });
    google.charts.setOnLoadCallback(CarregaDadosCadastro);

    function CarregaDadosCadastro() {
        $.ajax({
            url: '@Url.Action("CadastrosV_M", "Home")',
            dataType: "json",
            type: "GET",
            error: function (xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function (data) {
                DadosCadastro(data);
                return false;
            }
        });
        return false;
    }

    function DadosCadastro(data) {
        console.log(data); // Adicione esta linha
        var dataArray = [
            ['Tipo', 'Total']
        ];
        var TotalMotorista = data[0].totalMotorista;
        var TotalVeiculos = data[0].totalVeiculos;

        
        dataArray.push(['Veículos', TotalVeiculos]);
        dataArray.push(['Motoristas', TotalMotorista]);

        var data = google.visualization.arrayToDataTable(dataArray);

        var options = {
            
            pieSliceText: 'label',
            title: 'Cadastros Total em %',
            titleTextStyle: {
                fontSize: 16, // Tamanho da fonte do título do eixo x
                bold: true, // Negrito
                italic: false // Itálico
            },
            textStyle: {
                fontSize: 14 // Tamanho da fonte dos rótulos do eixo x
            },         
            pieStartAngle: 100,
            colors: ['#A0522D', '#D2B48C'], // Adicionei as cores aqui
           
        };
   
        var chart = new google.visualization.PieChart(document.getElementById('piechart_cadastros'));
        chart.draw(data, options);
    }
</script>



