@{
    ViewData["Title"] = "Listagem de Usuários";
}
@model List<UsuarioModel>


<div class="table-responsive">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-success" role="button" asp-controller="Usuario" asp-action="Criar" >Adicionar novo usuário</a>
    </div>
   @*  <div class="row">
        <p>
            <a class="btn btn-success" role="button" asp-controller="PDF" asp-action="PDF_Teste">Gerar Relatório</a>
        </p>
    </div> *@

    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @* <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">x</button> *@
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @* <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">x</button> *@
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <h1 class="display-4">Listagem de usuários</h1>

    <br />

    <table class="table table-hover" id="table-usuario">
        <thead>
            <tr>
                <th scope="col">Código Funcional:</th>
                <th scope="col">Nome:</th>
                <th scope="col">Usuário:</th>
                <th scope="col">Perfil:</th>
                <th scope="col">Criação:</th>
                <th scope="col">Última Atualização:</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null && Model.Any())
            {
                
                @foreach(UsuarioModel usuario in Model)
                {
                    @if (usuario.Usuario != "ADMIN")
                    {
                        <tr>
                            <th scope="row">@usuario.CodigoFuncional</th>
                            <td>@usuario.Nome</td>
                            <td>@usuario.Usuario</td>
                            <td>@usuario.Perfil</td>
                            <td>@usuario.DataCriacao</td>
                            <td>@usuario.DataUltimaAtualizacao</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a role="button" class="btn btn-warning" asp-route-id="@usuario.Id" asp-controller="Veiculo" asp-action="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a role="button" class="btn btn-info" asp-route-id="@usuario.Id" asp-controller="Veiculo" asp-action="Detalhes">
                                        <i class="fas fa-search"></i>
                                    </a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@usuario.Id" asp-controller="Veiculo" asp-action="ApagarConfirmacao">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }             
                }
            }
        
                       
        </tbody>
    </table>
</div>



