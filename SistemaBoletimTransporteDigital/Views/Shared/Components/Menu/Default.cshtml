@using SistemaBoletimTransporteDigital.Enums;
@model UsuarioModel




<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Olá, @Model.Nome</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
        </li>

        @if (Model.Perfil == SistemaBoletimTransporteDigital.Enums.PerfilEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Veiculo" asp-action="Index">Veiculos</a>
            </li>
        }

        @if (Model.Perfil == SistemaBoletimTransporteDigital.Enums.PerfilEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuários</a>
            </li>
        }
        @if (Model.Perfil == SistemaBoletimTransporteDigital.Enums.PerfilEnum.Admin)
        {
            @* <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Relatorio" asp-action="Index">Relatórios</a>
            </li> *@
            <li class="nav-item">
                @* <a class="nav-link text-dark" onmouseover="showDropdownMenu()" onmouseout="hideDropdownMenu()">
                    Relatório
                </a> *@
                <a class="nav-link text-dark" asp-area="" asp-controller="Relatorio" asp-action="Index" onmouseover="showDropdownMenu()" onmouseout="hideDropdownMenu()">Relatórios</a>
                <div id="dropdownMenu" class="dropdown-menu" onmouseover="showDropdownMenu()" onmouseout="hideDropdownMenu()">                  
                    <a class="dropdown-item" asp-area="" asp-controller="Veiculo" asp-action="Index">Veículos</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Motorista" asp-action="Index">Motoristas</a>
                </div>
            </li>

            <script>
                function showDropdownMenu() {
                    document.getElementById("dropdownMenu").style.display = "block";
                }

                function hideDropdownMenu() {
                    document.getElementById("dropdownMenu").style.display = "none";
                }
            </script>
        }

        @if (Model.Perfil == SistemaBoletimTransporteDigital.Enums.PerfilEnum.motorista)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Corrida" asp-action="Index">Corrida</a>
            </li>
        }

        @if (Model.Perfil == SistemaBoletimTransporteDigital.Enums.PerfilEnum.motorista)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Manutencao" asp-action="Index">Manutenção</a>
            </li>
        }

        @if (Model.Perfil == SistemaBoletimTransporteDigital.Enums.PerfilEnum.motorista)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Boletim" asp-action="Index">Boletim</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
        </li>

    </ul>
</div>