@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}
@model RedefinirSenhaModel

@if (TempData["MensagemErro"] != null)
{
    <br />
    <br />
    <div class="alert alert-danger" role="alert">
        @* <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button> *@
        @TempData["MensagemErro"]
    </div>
}

<style>
    .form-control {
        border: 1px solid #5C4033;
    }
</style>

<body class="vh-100" style="background-color:#fbf3e4;">
    <div class="container-fluid">
        <div class="row align-items-center">

            
            <div class="col-sm-6 ">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <div class="px-5 ms-xl-4">
                    <p class="h1 fw-bold mb-0"> Redefinir Senha</p>

                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" ,asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
 
                        <div class="mb-3">
                            @* <label for="login" class="form-label">Usuario:</label> *@
                            <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Digite seu Usuário">
                            @Html.ValidationMessageFor(x => x.Login)
                        </div>
                        <div class="mb-3">
                            <br />
                            @* <label for="email" class="form-label">E-mail:</label> *@
                            <input type="text" asp-for="Email" class="form-control" id="email" placeholder="Digite seu E-mail">
                            @Html.ValidationMessageFor(x => x.Email)
                           <br />
                        </div>

                        <div class="pt-1 mb-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-warning">Redefinir Senha</button>
                            <a class="btn btn-secondary" asp-controller="Login" asp-action="Index" role="button">Cancelar</a>
                        </div>
 
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <img src="~/images/transformers.png" style="width: 100%; height: auto;" />
            </div>
        </div>
    </div>
</body>

