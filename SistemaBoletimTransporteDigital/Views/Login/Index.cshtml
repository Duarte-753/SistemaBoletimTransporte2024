@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}
@model LoginModel

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @* <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button> *@
        @TempData["MensagemErro"]
    </div>
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
       @*  <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button> *@
        @TempData["MensagemSucesso"]
    </div>
}

<style>
    /* Estilo para inputs em caixa alta */
    input.uppercase {
        text-transform: uppercase;
    }

    /* Estilo para inputs em caixa baixa */
    input.lowercase {
        text-transform: lowercase;
    }
</style>


<body class="vh-100" style="background-color:#fbf3e4;">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-sm-6 ">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <div class="px-5 ms-xl-4">
                    <p class="h1 fw-bold mb-0"> Login</p>                    

                </div>
               
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" ,asp-controller="Login" asp-action="Entrar" method="post">

                        @* <h3 class="fw-bold mb-3 pb-3" style="letter-spacing: 1px;">Login</h3> *@


                        <div class="form-outline mb-4">
                            <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Digite seu Usuário">
                            @* <label class="form-label" for="form2Example18" style="font-weight: bold;">Usuario</label> *@
                            @Html.ValidationMessageFor(x => x.Login)
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Digite sua Senha">
                            @* <label class="form-label" for="form2Example18" style="font-weight: bold;">Senha</label> *@
                            @Html.ValidationMessageFor(x => x.Senha)
                        </div>

                        <div class="pt-1 mb-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-success mr-6" style="color: white;">Entrar</button>
                            <a class="btn btn-secondary" asp-controller="Home" asp-action="LandingPage" role="button">Voltar a tela Inicial</a>
                        </div>

                        <div class="pt-1 mb-4 d-flex justify-content-between">
                            <a class="btn btn-warning" asp-controller="Login" asp-action="RedefinirSenha" role="button">Redefinir minha senha</a>
                        </div>
                                            
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <img src="~/images/transformers.png" style="width: 100%; height: auto;" />
            </div>
        </div>
    </div>
</body>




       