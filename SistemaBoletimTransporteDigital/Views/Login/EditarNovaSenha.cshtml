
@model UsuarioModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Nova senha";
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @* <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button> *@
        @TempData["MensagemErro"]
    </div>
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        @*  <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button> *@
        @TempData["MensagemSucesso"]
    </div>
}


<body class="vh-100" style="background-color:#fbf3e4;">
    <div class="container-fluid">
        <div class="row align-items-center">

            
            <div class="col-sm-6 ">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />

                <div class="px-5 ms-xl-4">
                    <p class="h1 fw-bold mb-0"> Nova Senha</p>

                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form asp-controller="Login" asp-action="EditarNovaSenha" method="post" onsubmit="return validarSenhas();">

                        <input type="hidden" asp-for="Id" />

                        <div class="form-outline mb-4">
                            <label for="senha">Nova Senha:</label>
                            <div class="input-group">
                                <input type="password" id="senha1" class="form-control" placeholder="Crie uma nova senha">
                                <span class="input-group-text" onclick="togglePasswordVisibility('senha1')">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                        <path fill="none" d="M0 0h24v24H0z" />
                                        <path d="M12 7.5a7.5 7.5 0 0 1 7.5 7.5c-.612 1.858-2.217 3.463-4.075 4.075A7.5 7.5 0 0 1 12 20.5a7.5 7.5 0 0 1-7.5-7.5c.612-1.858 2.217-3.463 4.075-4.075A7.5 7.5 0 0 1 12 7.5zM12 4a1 1 0 0 1 1 1c0 1.364-1.363 2.908-2.287 3.854l1.433 1.433C11.343 10.52 11 9.82 11 9a3 3 0 0 1 6 0c0 1.146-.99 2.635-2 3.59l1.43 1.43C17.678 13.11 19 11.807 19 10.5a5.5 5.5 0 0 0-11 0c0 .512.134 1.008.36 1.44l1.426-1.427C8.383 9.864 8 9.207 8 8a4 4 0 0 1 8 0 4 4 0 0 1-8 0c0-.2.037-.397.106-.586l1.428-1.427C7.9 6.626 7 5.159 7 5a1 1 0 0 1 1-1z" />
                                    </svg>
                                </span>
                            </div>                       
                        </div>

                        <div class="form-outline mb-4">
                            <label for="senha">Confirme a Nova Senha:</label>
                            <div class="input-group">
                                <input type="password" asp-for="Senha" id="senha2" class="form-control" placeholder="Crie uma nova senha para esse usuário.">
                                <span class="input-group-text" onclick="togglePasswordVisibility('senha2')">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                        <path fill="none" d="M0 0h24v24H0z" />
                                        <path d="M12 7.5a7.5 7.5 0 0 1 7.5 7.5c-.612 1.858-2.217 3.463-4.075 4.075A7.5 7.5 0 0 1 12 20.5a7.5 7.5 0 0 1-7.5-7.5c.612-1.858 2.217-3.463 4.075-4.075A7.5 7.5 0 0 1 12 7.5zM12 4a1 1 0 0 1 1 1c0 1.364-1.363 2.908-2.287 3.854l1.433 1.433C11.343 10.52 11 9.82 11 9a3 3 0 0 1 6 0c0 1.146-.99 2.635-2 3.59l1.43 1.43C17.678 13.11 19 11.807 19 10.5a5.5 5.5 0 0 0-11 0c0 .512.134 1.008.36 1.44l1.426-1.427C8.383 9.864 8 9.207 8 8a4 4 0 0 1 8 0 4 4 0 0 1-8 0c0-.2.037-.397.106-.586l1.428-1.427C7.9 6.626 7 5.159 7 5a1 1 0 0 1 1-1z" />
                                    </svg>
                                </span>
                            </div>
                            <span id="senha-error" class="text-danger"></span>
                        </div>

                        

                        <script>
                            // Função para validar se as senhas são iguais
                            function validarSenhas() {
                                var senha1 = document.getElementById('senha1').value;
                                var senha2 = document.getElementById('senha2').value;

                                // Verifica se as senhas são iguais
                                if (senha1 !== senha2) {
                                    document.getElementById('senha-error').innerText = 'As senhas não coincidem';
                                    return false; // Retorna falso para indicar que há um erro e impedir o envio do formulário
                                } else {
                                    document.getElementById('senha-error').innerText = '';
                                    return true; // Retorna verdadeiro se as senhas forem iguais, permitindo o envio do formulário
                                }
                            }

                            function togglePasswordVisibility(fieldId) {
                                var field = document.getElementById(fieldId);

                                if (field.type === "password") {
                                    field.type = "text";
                                } else {
                                    field.type = "password";
                                }
                            }
                        </script>


                        <br />
                        <button type="submit" class="btn btn-warning">Atualizar Senha</button>

                    </form>



                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <img src="~/images/transformers.png" style="width: 100%; height: auto;" />
            </div>
        </div>
    </div>
</body>







