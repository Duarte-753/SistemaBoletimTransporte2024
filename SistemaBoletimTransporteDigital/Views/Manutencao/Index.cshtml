@{
    Layout = "_Layout";
    ViewData["Title"] = "Manutenção";
}
@model List<ManutencaoModel>

<style>
    /* Altera o tamanho da fonte para todo o DataTable */
    #table-manutencao_wrapper {
        font-size: 14px; /* Tamanho da fonte desejado */
    }

    /* Altera o tamanho da barra de pesquisa */
    #table-manutencao_filter input[type="search"] {
        font-size: 14px; /* Tamanho da fonte desejado */
        padding: 6px 10px; /* Ajuste o padding conforme necessário */
        border-radius: 5px; /* Adiciona um leve arredondamento às bordas */
    }

    /* Altera o tamanho da seleção de quantidade de páginas */
    #table-manutencao_length select {
        font-size: 14px; /* Tamanho da fonte desejado */
        padding: 6px 10px; /* Ajuste o padding conforme necessário */
        border-radius: 5px; /* Adiciona um leve arredondamento às bordas */
        width: 60px; /* Largura desejada */
    }
</style>

<div class="text-center">
    <br />
    <h1 class="display-4">Suas Manutenções</h1>
    <br />
</div>

@* <div class="table-responsive"> *@

    @* <div class="d-grid gap-2 d-md-flex justify-content-md-start">      
        <a class="btn btn-success" role="button"  asp-controller="Manutencao" asp-action="CriarManutencao">Criar Manutenção</a>
    </div> *@

    <br />

@if (TempData["MensagemSucesso"] != null)
{
    <div class="container">
        <div class="row">
            <div class="alert alert-success" role="alert" d-grid gap-2 d-md-flex justify-content-md-start>
                @* <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">x</button> *@
                @TempData["MensagemSucesso"]
            </div>
        </div>
    </div>

}
@if (TempData["MensagemErro"] != null)
{
    <div class="container">
        <div class="row">
            <div class="alert alert-danger" role="alert" d-grid gap-2 d-md-flex justify-content-md-start>
                @* <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">x</button> *@
                @TempData["MensagemErro"]
            </div>
        </div>
    </div>

}    
    <div class="container">
        <div class="row">
            <div class="col-12">
            <table class="table table-hover" id="table-manutencao" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">Veículo:</th>
                        <th scope="col">Placa:</th>
                        <th scope="col">Data Manutenção:</th>
                        <th scope="col">Descrição da manutenção:</th>
                        <th scope="col">Tipo:</th>
                        <th scope="col">Opções:</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (ManutencaoModel manutencao in Model)
                        {
                            <tr>
                                <td>
                                    @if (manutencao.Veiculo != null)
                                    {
                                        @manutencao.Veiculo.Veiculo
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => manutencao.VeiculoID)
                                    }
                                </td>
                                <td>
                                    @if (manutencao.Veiculo != null)
                                    {
                                        @manutencao.Veiculo.Placa
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => manutencao.VeiculoID)
                                    }
                                </td>
                                <td>@manutencao.DataManutencao</td>
                                <td>@manutencao.DescricaoManutencao</td>
                                <td>@manutencao.TipoManutencao</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">

                                        <a role="button" class="btn btn-info" asp-route-id="@manutencao.Id" asp-controller="Manutencao" asp-action="DetalhesDaManutencao">
                                            <i class="fas fa-search"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
    
@* </div> *@



<script>

    function getDatatable(id) {
        $(id).DataTable({
            responsive: true,
        })
    }
</script>